<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="0dp"
        android:background="@drawable/light_grey_bg"
        android:layout_weight="1"
        android:padding="15dp"
        android:id="@+id/currencybgrl"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="code"
            android:textSize="14sp"
            fontPath="fonts/OpenSans-ExtraBold.ttf"
            android:id="@+id/activity_leader_setting_selected_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/activity_leader_setting_selected_currency"
            android:id="@+id/currencnyname"
            android:text="name"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/activity_leader_setting_selected_currency_delete"
        android:src="@android:drawable/ic_delete"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content" />
</LinearLayout>