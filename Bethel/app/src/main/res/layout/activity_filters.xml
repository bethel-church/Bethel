<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        >

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:text="Filter"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/save_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:text="Apply"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="17sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resetfiltertv"
            android:layout_width="150dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text="Reset All Filters"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#5E5E5E"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="140dp"
            android:background="#5E5E5E"
            android:layout_gravity="center"
            android:layout_height="2dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/filterviewrl"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Only Show My Receipts"
            android:gravity="center"
            android:textColor="#5E5E5E"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/usertogglebtn"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Date Filter"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="#E6E6E6"
        android:textColor="#000000"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Show Receipts From All Dates"
            android:gravity="center"
            android:textColor="#5E5E5E"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/togglebtn"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/togglebtn"
    android:orientation="horizontal"
    android:layout_marginRight="10dp"
    android:id="@+id/startdatecontainerll"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:padding="10dp"

        android:textStyle="bold"
        android:text="Show Receipts From :"
        android:gravity="left"
        android:textColor="#5E5E5E"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight=".4"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/calicon"
            android:layout_height="30dp" />
        <TextView
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startdatetv"
            android:layout_marginLeft="5dp"
            android:gravity="center"

            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/calicon"
            android:text="10 dec 2016"

            />


    </LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/startdatecontainerll"
            android:orientation="horizontal"

            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:id="@+id/enddatecontainerll"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".9"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Show Receipts Until :"
                android:gravity="left"
                android:textColor="#5E5E5E"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".4"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/calicon"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calicon"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/enddatetv"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"

                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_toRightOf="@+id/calicon"
                    android:text="3 dec 2016"

                    />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="Categories Filter"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="#E6E6E6"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
 <ListView
     android:id="@+id/cateogrylv"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"></ListView>
</LinearLayout>